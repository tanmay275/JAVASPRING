package com.ccc.tcapi.service;

import java.util.List;

import com.ccc.tcapi.dto.RequestOrgCourse;
import com.ccc.tcapi.entites.OrgCourseEntity;
import com.ccc.tcapi.repository.OrgCourseRepository;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

@Component
public class OrgSubjectMappingServicempl implements OrgSubjectMappingService {

    @Autowired
    OrgSubjectMappingRepository subjectRepo;

    @Override
    public List<OrgSubjectMappingEntity> GetAllOrgSubjectMapping() {
        return subjectRepo.findAll();
    }

    @Override
    public Integer SaveOrgSubjectMapping(RequestOrgSubjectMapping subject) {
        OrgSubjectMappingEntity response = subjectRepo.save(subject.getSubject);
        return response.getCourseRowID();
    }

    @Override
    public List<OrgSubjectMappingEntity> GetAllOrgSubjectMapping(Integer orgRowId) {
        return courseRepo.findByOrgRowID(orgRowId);
    }

}
